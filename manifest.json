{
    "manifest_version": 3,
    "name": "CRCMenu-Browser-Plugin",
    "version": "1.1",
    "description": "自定义右键菜单扩展，支持常规操作、编辑操作、链接操作和图片操作",
    "permissions": [
        "activeTab",
        "clipboardRead",
        "clipboardWrite",
        "storage",
        "tabs"
    ],
    "action": {
        "default_popup": "option.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "CRCMenu.css"
            ],
            "js": [
                "CRCMenu.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["option.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}